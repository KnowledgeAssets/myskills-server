root = true

[*.{java,xml,json,gradle}]
indent_style = tab
indent_size = 4
continuation_indent_size = 8
end_of_line = lf
charset = utf-8
max_line_length = 120

[*.java]
trim_trailing_whitespace = true
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8

[*.bat]
end_of_line = crlf
